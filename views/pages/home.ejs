<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head"); %>
  </head>

  <body>
    <section class="header">
      <a href="/" class="logo">
        <img src="/media/logo.png" alt="logo" width="140px" height="80px" />
      </a>
      <input id="burger" type="checkbox" />
      <label for="burger">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <nav>
        <ul>
          <li><a href="/package">Packages</a></li>
          <li><a href="/management">Management Packages</a></li>
        </ul>
      </nav>
    </section>
    <main>
      <section class="home">
        <div class="row">
          <div class="col-xs-12 center-container">
            <video class="d-block w-100" autoplay loop muted>
              <source src="/media/video.mp4" type="video/mp4" />
            </video>
            <div class="center-text">
              <h1>TAKE A BREAK</h1>
              <p>Book your favourite package for your next destination.</p>
            </div>
          </div>
        </div>
      </section>
      <!-- packages section -->
      <section class="package">
        <div class="title">
          <h2>PACKAGES</h2>
        </div>
        <div class="container">
          <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.slice(0, 6).forEach(package => { %>
            <div class="col">
              <div class="card h-100">
                <div class="container-img">
                  <a href="/offer/<%=package.id%>"
                    ><img
                      src="/media/<%=package.image%>"
                      class="card-img-top"
                      alt="package-image"
                  /></a>
                </div>
                <div class="card-body">
                  <h5 class="card-title fw-bold"><%= package.name %></h5>
                  <div class="text-right">
                    de la <span class="price"><%= package.price %>â‚¬ </span>
                  </div>
                  <a href="#" class="btn-link">Book Now</a>
                </div>
              </div>
            </div>
            <% }) %>
            <button
              type=" submit"
              class="btn text-white shadow-none custom-bg mt-4 p-2 ms-auto me-auto mb-3"
            >
              <a href="/package" class="text-white"
                >View all <i class="bi bi-chevron-double-right"></i
              ></a>
            </button>
          </div>
        </div>
      </section>
      <!-- services section -->
      <section class="services">
        <div class="title">
          <h2>OUR SERVICES</h2>
        </div>
        <div class="container-fluid">
          <div class="row mb-0">
            <div class="col-md-4">
              <div class="box">
                <div class="our-services accommodation">
                  <div class="icon">
                    <i class="bi bi-house-door" style="font-size: 2rem"></i>
                  </div>
                  <h4>accommodation</h4>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="box">
                <div class="our-services food">
                  <div class="icon">
                    <i class="bi bi-cup-straw" style="font-size: 2rem"></i>
                  </div>
                  <h4>food & drink</h4>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="box">
                <div class="our-services transport">
                  <div class="icon">
                    <i
                      class="bi bi-airplane-engines"
                      style="font-size: 2rem"
                    ></i>
                  </div>
                  <h4>transfers & transport</h4>
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-md-4">
              <div class="box">
                <div class="our-services tours">
                  <div class="icon">
                    <i class="bi bi-globe" style="font-size: 2rem"></i>
                  </div>
                  <h4>city tours</h4>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="box">
                <div class="our-services nature">
                  <div class="icon">
                    <i class="bi bi-flower1" style="font-size: 2rem"></i>
                  </div>
                  <h4>nature & wildlife areas</h4>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="box">
                <div class="our-services bus">
                  <div class="icon">
                    <i class="bi bi-bus-front" style="font-size: 2rem"></i>
                  </div>
                  <h4>bus tours</h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- contact section -->
      <section class="contact" id="contact">
        <div class="title">
          <h2>CONTACT US</h2>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-lg-6 col-md-6 mb-5 px-4">
              <div class="bg-black rounded p-4 text-start">
                <iframe
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2787.9892899252045!2d25.597805875201686!3d45.6711153196107!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40b35bea5bff09e9%3A0x773e899be5237eec!2sStr.%201%20Decembrie%201918%2040%2C%20Bra%C8%99ov%20500152!5e0!3m2!1sro!2sro!4v1699005196221!5m2!1sro!2sro"
                  width="600"
                  height="450"
                  style="border: 0"
                  allowfullscreen=""
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                ></iframe>
                <a
                  href="https://maps.app.goo.gl/bxFBTTiSagCdBWF67"
                  target="_blank"
                  class="d-inline-block fs-6 fw-normal text-decoration-none text-white mb-2"
                >
                  <i class="bi bi-geo-alt"></i> 40, 1 Decembrie 1918, Brasov
                </a>
                <h5 class="mt-4">Call us</h5>
                <a
                  href="tel: +40756670033"
                  class="d-inline-block fs-6 fw-normal mb-2 text-decoration-none text-white"
                >
                  <i class="bi bi-telephone-fill white"></i> +40756670033
                </a>
                <br />
                <a
                  href="tel: +40756458634"
                  class="d-inline-block fs-6 fw-normal text-decoration-none text-white"
                >
                  <i class="bi bi-telephone-fill white"></i> +40756458634
                </a>
                <h5 class="mt-4">Email</h5>
                <a
                  href="mailto: e-travel@gmail.com"
                  class="d-inline-block fs-6 fw-normal text-decoration-none text-white"
                >
                  <i class="bi bi-envelope-fill white"></i> e-travel@gmail.com
                </a>
                <h5 class="mt-4">Follow us</h5>
                <a
                  href="#"
                  class="d-inline-block text-white fs-6 fw-normal me-2"
                >
                  <i class="bi bi-twitter me-1"></i>
                </a>
                <a
                  href="#"
                  class="d-inline-block text-white fs-6 fw-normal me-2"
                >
                  <i class="bi bi-facebook me-1"></i>
                </a>
                <a href="#" class="d-inline-block text-white fs-6 fw-normal">
                  <i class="bi bi-instagram me-1"></i>
                </a>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 px-4">
              <div class="bg-black p-4 rounded text-start shadow mb-5">
                <form>
                  <h5>Send a message</h5>
                  <div class="mt-3">
                    <label class="form-label fs-6 fw-normal">Name</label>
                    <input type="text" class="form-control shadow-none" />
                  </div>
                  <div class="mt-3">
                    <label class="form-label fs-6 fw-normal">Email</label>
                    <input type="email" class="form-control shadow-none" />
                  </div>
                  <div class="mt-3">
                    <label class="form-label fs-6 fw-normal">Subject</label>
                    <input type="text" class="form-control shadow-none" />
                  </div>
                  <div class="mt-3">
                    <label class="form-label fs-6 fw-normal">Message</label>
                    <textarea
                      class="form-control shadow-none"
                      rows="5"
                      style="resize: none"
                    ></textarea>
                  </div>
                  <button type="submit" class="btn text-white custom-bg mt-3">
                    SEND
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <%- include("../partials/footer"); %>
  </body>
</html>
