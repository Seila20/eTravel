<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head"); %>
  </head>

  <body>
    <section class="header">
      <a href="/" class="logo">
        <img src="/media/logo.png" alt="logo" width="140px" height="80px" />
      </a>
      <input id="burger" type="checkbox" />
      <label for="burger">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <nav>
        <ul>
          <li><a href="/package">Packages</a></li>
          <li><a href="/management">Management Packages</a></li>
        </ul>
      </nav>
    </section>
    <div class="container py-5">
      <a href="/addpackage" class="btn btn-info mb-3">Add New</a>
      <div class="row mt-1">
        <table
          id="package-table"
          class="table text-center text-white"
          style="width: 100%"
        >
          <thead class="table-secondary">
            <tr>
              <th scope="col">Destination</th>
              <th scope="col">Image</th>
              <th scope="col">Price</th>
              <th scope="col">Description</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(package => { %>
            <tr>
              <td class="fw-normal"><%= package.name %></td>
              <td class="fw-normal text-center">
                <img
                  src="/media/<%= package.image %>"
                  alt="package-image"
                  height="80px"
                  width="100px"
                  class="mt-2"
                />
              </td>
              <td class="fw-normal"><%= package.price %></td>
              <td class="text-start fw-normal"><%= package.description %></td>
              <td>
                <a href="/editpackage/<%=package.id%>" class="link-info"
                  ><i class="bi bi-pencil-square fs-6 me-1"></i
                ></a>
                <a href="/deletepackage/<%=package.id%>" class="link-danger"
                  ><i class="bi bi-trash-fill fs-6"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <%- include("../partials/footer"); %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
  </body>
</html>

<script>
  $(document).ready(function () {
    $("#package-table").DataTable();
  });
</script>
